<Window x:Class="WPFApp.LocationInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFApp"
        mc:Ignorable="d"
        Title="LocationInfo" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <Button x:Name="loadLocationInfo" Margin="20" Click="loadLocationInfo_Click">Load ISS Location Info</Button>
            <TextBlock x:Name="latitudeText" Margin="20"/>
            <TextBlock x:Name="longitudeText" Margin="20"/>
            <TextBlock x:Name="altitudeText" Margin="20"/>
            <TextBlock x:Name="velocityText" Margin="20"/>
        </StackPanel>
    </Grid>
</Window>
